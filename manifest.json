{
  "manifest_version": 2,
  "name": "Hazmat",
  "version": "2.0.0",
  "description": "Block unwanted subreddits",
  "permissions": [
    "storage",
    "tabs"
  ],
  "minimum_chrome_version": "68",
  "content_scripts": [{
    "matches": [
      "http://www.reddit.com/*",
      "https://www.reddit.com/*",
      "http://reddit.com/*",
      "https://reddit.com/*"
    ],
    "js": [
      "src/app.js"
    ]
  }],
  "browser_specific_settings": {
    "gecko": {
      "id": "com.mvoloskov.hazmat@2.0.0"
    }
  },
  "browser_action": {
    "default_icon": {
      "19": "src/assets/16.png",
      "38": "src/assets/48.png"
    },
    "default_title": "Hazmat options",
    "default_popup": "src/options/options.html"
  },
  "icons": {
    "16": "src/assets/16.png",
    "48": "src/assets/48.png",
    "128": "src/assets/128.png"
  }
}
